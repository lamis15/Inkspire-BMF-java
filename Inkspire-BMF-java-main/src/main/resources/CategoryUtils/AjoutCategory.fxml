<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Category.AjoutCategory">
    <Label text="Nom de la catégorie" style="-fx-font-weight: bold;"/>
    <TextField fx:id="nameField" promptText="Entrez le nom"/>

    <Label text="Description" style="-fx-font-weight: bold;"/>
    <TextArea fx:id="descriptionField" promptText="Entrez la description" wrapText="true"/>

    <Label text="Statut" style="-fx-font-weight: bold;"/>
    <ComboBox fx:id="statutComboBox" promptText="Sélectionner le statut"/>

    <Button fx:id="addButton" text="Ajouter" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" onAction="#handleAdd"/>
    <Button fx:id="cancelButton" text="Annuler" style="-fx-background-color: #f44336; -fx-text-fill: white;" onAction="#handleCancel"/>
</VBox>