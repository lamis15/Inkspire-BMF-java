<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.Auction.AjouterAuction"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <TextField fx:id="labelField" promptText="Label"/>
    <Label fx:id="labelError" textFill="red"/>

    <DatePicker fx:id="startDatePicker" promptText="Start Date"/>
    <Label fx:id="startDateError" textFill="red"/>

    <DatePicker fx:id="endDatePicker" promptText="End Date"/>
    <Label fx:id="endDateError" textFill="red"/>

    <TextField fx:id="startPriceField" promptText="Start Price"/>
    <Label fx:id="startPriceError" textFill="red"/>

    <TextField fx:id="endPriceField" promptText="End Price"/>
    <Label fx:id="endPriceError" textFill="red"/>

    <ComboBox fx:id="artworkComboBox" prefWidth="200"/>
    <Label fx:id="artworkError" textFill="red"/>

    <Button text="Add Auction" onAction="#onAddAuction"/>
</VBox>
