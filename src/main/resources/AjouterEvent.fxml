<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.Event.AjouterEvent"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Titre de la fenêtre -->
    <Label text="Ajouter un Événement"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Formulaire de saisie -->
    <GridPane vgap="10" hgap="10">
        <Label text="Titre de l'événement :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" promptText="Entrez le titre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Date de début :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="startDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Date de fin :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="endDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Lieu :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="locationField" promptText="Entrez le lieu" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Latitude :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="latitudeField" promptText="Entrez la latitude" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Longitude :" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="longitudeField" promptText="Entrez la longitude" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!-- Sélection d'une image -->
        <Label text="Image :" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <Label fx:id="imagePathLabel" text="Aucune image choisie" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        <Button text="Choisir une image" onAction="#chooseImage" GridPane.rowIndex="6" GridPane.columnIndex="2"/>

        <!-- Sélection de la catégorie -->
        <Label text="Catégorie :" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <ComboBox fx:id="categoryComboBox" promptText="Sélectionnez la catégorie" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Boutons d'action -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#annuler"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button text="Ajouter" onAction="#ajouter"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

</VBox>
