<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<VBox spacing="15" styleClass="calendar-container" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.Event.CalendarViewController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Back and Today Buttons -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="backButton" text="Back to Events" onAction="#onBackButtonClick" styleClass="nav-button"/>
        <Button fx:id="todayButton" text="Today" onAction="#onTodayButtonClick" styleClass="nav-button"/>
    </HBox>

    <!-- Calendar Navigation -->
    <HBox spacing="15" alignment="CENTER" styleClass="nav-bar">
        <Button fx:id="prevMonthButton" text="◄" onAction="#onPreviousMonth" styleClass="nav-button"/>
        <Label fx:id="monthYearLabel" text="Month Year" styleClass="month-label"/>
        <Button fx:id="nextMonthButton" text="►" onAction="#onNextMonth" styleClass="nav-button"/>
    </HBox>

    <!-- Calendar Grid -->
    <GridPane fx:id="calendarGrid" hgap="8" vgap="8" styleClass="calendar-grid"/>

    <stylesheets>
        <URL value="@/styleEvent.css"/>
    </stylesheets>
</VBox>