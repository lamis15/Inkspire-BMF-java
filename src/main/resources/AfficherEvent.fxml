<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox fx:id="rootVBox" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.Event.AfficherEvent">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Search, Sort, and Calendar Button -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher par titre..." onAction="#onSearch"/>
        <ComboBox fx:id="sortComboBox" promptText="Trier par..." onAction="#onSort">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Date de dÃ©but"/>
                    <String fx:value="Titre A-Z"/>
                    <String fx:value="Titre Z-A"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Button text="Calendrier" onAction="#onCalendarButtonClick"/>
    </HBox>

    <!-- Scrollable Event Cards -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <content>
            <FlowPane fx:id="cardsContainer" hgap="10" vgap="10"/>
        </content>
    </ScrollPane>
</VBox>