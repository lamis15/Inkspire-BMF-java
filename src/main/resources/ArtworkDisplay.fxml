<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.Artwork.ArtworkDisplayController"
      spacing="10" style="-fx-padding: 20;" prefWidth="800.0" prefHeight="600.0">

    <!-- Add Artwork Button -->
    <Button fx:id="addButton"
            text="+ Add Artwork"
            onAction="#onAddClick"
            maxWidth="100"
            style="-fx-background-radius: 50; -fx-border-radius: 50; -fx-background-color: #4D81F7; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 16; -fx-effect: dropshadow(gaussian, rgba(2, 7, 65, 0.2), 4, 0, 0, 2);"
            styleClass="add-button"/>

    <!-- ScrollPane to hold the artwork cards -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="550.0">
        <content>
            <!-- FlowPane for displaying the artwork cards dynamically -->
            <FlowPane fx:id="cardsContainer"
                      hgap="20" vgap="20"
                      style="-fx-background-color: transparent;" />
        </content>
    </ScrollPane>
</VBox>
