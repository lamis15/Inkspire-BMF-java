<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="window" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Donations.AfficherDonations">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="14.0" prefHeight="600.0" prefWidth="800.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" styleClass="top-nav">
               <children>
                  <Label fx:id="pageTitle" styleClass="title" text="My Donations" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
            
            <!-- Stats Section -->
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="120.0" prefWidth="220.0" styleClass="stat-card">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Label styleClass="stat-icon" text="📊" />
                              <Label styleClass="stat-label" text="Total Donations" />
                           </children>
                        </HBox>
                        <Label fx:id="totalDonationsLabel" styleClass="stat-number" text="0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="120.0" prefWidth="220.0" styleClass="stat-card">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Label styleClass="stat-icon" text="💰" />
                              <Label styleClass="stat-label" text="Total Amount" />
                           </children>
                        </HBox>
                        <Label fx:id="totalAmountLabel" styleClass="stat-number" text="0 TND" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="120.0" prefWidth="220.0" styleClass="stat-card">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Label styleClass="stat-icon" text="🏆" />
                              <Label styleClass="stat-label" text="Collections Supported" />
                           </children>
                        </HBox>
                        <Label fx:id="collectionsCountLabel" styleClass="stat-number" text="0" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="25.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Donations Table -->
            <TableView fx:id="donationsTable" prefHeight="400.0" prefWidth="800.0" styleClass="donations-table" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="dateColumn" prefWidth="150.0" text="Date" />
                <TableColumn fx:id="donorColumn" prefWidth="150.0" text="Donor" />
                <TableColumn fx:id="collectionColumn" prefWidth="180.0" text="Collection" />
                <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
                <TableColumn fx:id="actionsColumn" prefWidth="250.0" text="Actions" />
              </columns>
              <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" />
              </VBox.margin>
              <placeholder>
                <Label text="No donations found" style="-fx-text-fill: #020741;" />
              </placeholder>
            </TableView>
            
            <!-- Custom cell templates for actions column -->
            <HBox fx:id="actionButtonsTemplate" managed="false" visible="false" spacing="5.0" alignment="CENTER">
              <Button fx:id="modifyButtonTemplate" text="Modify" styleClass="action-button-small" style="-fx-background-color: #4D81F7; -fx-text-fill: white;" />
              <Button fx:id="refundButtonTemplate" text="Refund" styleClass="delete-button-small" style="-fx-background-color: #D32F2F; -fx-text-fill: white;" />
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
