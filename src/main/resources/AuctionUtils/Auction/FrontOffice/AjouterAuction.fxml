<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootVBox" alignment="CENTER" prefHeight="517.0" prefWidth="427.0" spacing="10" style="-fx-padding: 20;" stylesheets="@auction.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Auction.FrontOffice.AjouterAuction">
   <Label prefHeight="82.0" prefWidth="213.0" text="Add Auction">
      <font>
         <Font name="System Bold" size="35.0" />
      </font>
   </Label>
    <VBox alignment="CENTER" fillWidth="false" prefHeight="411.0" prefWidth="387.0">
      <children>
      
          <TextField fx:id="labelField" prefHeight="25.0" prefWidth="218.0" promptText="Label" styleClass="add-field" />
          <Label fx:id="labelError" textFill="red" />
      
          <DatePicker fx:id="startDatePicker" prefHeight="25.0" prefWidth="216.0" promptText="Start Date" />
          <Label fx:id="startDateError" textFill="red" />
      
          <DatePicker fx:id="endDatePicker" prefHeight="25.0" prefWidth="216.0" promptText="End Date" />
          <Label fx:id="endDateError" textFill="red" />
      
          <TextField fx:id="startPriceField" prefHeight="25.0" prefWidth="217.0" promptText="Start Price" styleClass="add-field" />
          <Label fx:id="startPriceError" textFill="red" />
      
          <TextField fx:id="endPriceField" prefHeight="25.0" prefWidth="222.0" promptText="End Price" styleClass="add-field" />
          <Label fx:id="endPriceError" textFill="red" />
         <Label prefHeight="17.0" prefWidth="94.0" text="select artwork : " />
      
          <ComboBox fx:id="artworkComboBox" prefHeight="19.0" prefWidth="215.0" />
          <Label fx:id="artworkError" textFill="red" />
      
          <Button onAction="#onAddAuction" styleClass="add-button" text="Add Auction" />
      </children>
   </VBox>
</VBox>
