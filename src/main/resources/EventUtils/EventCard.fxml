<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="root" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.Event.EventCard"
      prefWidth="240" prefHeight="360"
      spacing="10" alignment="TOP_CENTER"
      style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0.2, 0, 3);">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <ImageView fx:id="eventImage"
               fitWidth="180" fitHeight="100"
               style="-fx-border-radius: 10;"
               preserveRatio="true"/>

    <Label fx:id="titleLabel"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-alignment: center;"
           wrapText="true"/>

    <Label fx:id="locationLabel"
           style="-fx-font-size: 12px; -fx-text-fill: #444;"
           wrapText="true"/>

    <HBox spacing="5" alignment="CENTER">
        <Label fx:id="startingDateLabel"
               style="-fx-font-size: 11px; -fx-text-fill: #777;"/>
        <Label text="→" style="-fx-text-fill: #999;"/>
        <Label fx:id="endingDateLabel"
               style="-fx-font-size: 11px; -fx-text-fill: #777;"/>
    </HBox>

    <HBox spacing="5" alignment="CENTER">
        <Label fx:id="latitudeLabel"
               style="-fx-font-size: 10px; -fx-text-fill: #999;"/>
        <Label fx:id="longitudeLabel"
               style="-fx-font-size: 10px; -fx-text-fill: #999;"/>
    </HBox>

    <Label fx:id="categoryLabel"
           style="-fx-font-size: 11px; -fx-text-fill: #5B87FF;"
           wrapText="true"/>

    <Button fx:id="voirDetailsButton"
            text="Voir Détails"
            onAction="#handleVoirDetails"
            style="-fx-font-size: 12px; -fx-background-color: #5B87FF; -fx-text-fill: white; -fx-background-radius: 8;"
            prefWidth="120" prefHeight="28"/>
</VBox>