<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="rootVBox" prefHeight="600.0" prefWidth="800.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.user.AfficherUsers">
   <children>
      <!-- HBox for Modify and Delete Buttons -->
      <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
         <Button fx:id="modifyButton" text="Modify" styleClass="primary-button" onAction="#onModifyClick"/>
      </HBox>

      <ScrollPane fitToWidth="true" prefHeight="550.0">
         <content>
            <FlowPane fx:id="cardsContainer" hgap="20" style="-fx-background-color: transparent;" vgap="20" />
         </content>
      </ScrollPane>
   </children>
</VBox>
