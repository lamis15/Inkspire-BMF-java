<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700" prefWidth="800" styleClass="window" stylesheets="@style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Artwork.AjouterArtworkController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="top-nav">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Button fx:id="backButton" onAction="#onBackClick" styleClass="back-button" text="Back" />
            <Label styleClass="title" text="Add New Artwork" HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true" styleClass="main-scroll-pane" vbarPolicy="AS_NEEDED">
            <content>
                <VBox fx:id="rootVBox" alignment="CENTER" spacing="15" style="-fx-padding: 40;" styleClass="card">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <Label styleClass="title" text="Add Artwork" />

                    <TextField fx:id="nameField" promptText="Artwork Name" styleClass="text-input" />
                    <TextField fx:id="themeField" promptText="Theme" styleClass="text-input" />
                    <TextArea fx:id="descriptionArea" prefRowCount="4" promptText="Description" styleClass="text-input" wrapText="true" />
                    <CheckBox fx:id="status" alignment="TOP_LEFT" contentDisplay="BOTTOM" prefHeight="18.0" prefWidth="698.0" style="-fx-text-fill: black;" text="Place it on a bid" textAlignment="JUSTIFY" />
                    <HBox spacing="10">
                        <Button onAction="#chooseImage" styleClass="secondary-button" text="Choose an image" />
                        <Label fx:id="imagePathLabel" styleClass="body-text" text="No image chosen" />
                    </HBox>

                    <Button onAction="#addArtwork" styleClass="primary-button" text="Confirm" />
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
