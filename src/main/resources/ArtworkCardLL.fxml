<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane onMouseClicked="#handleCardClick" prefHeight="315.0" prefWidth="345.0" styleClass="collection-card" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Artwork.ArtworkCardController">

    <VBox layoutX="10" layoutY="10" prefHeight="296.0" prefWidth="325.0" spacing="6">
        <padding>
            <Insets bottom="8" left="8" right="8" top="8" />
        </padding>
      <Button mnemonicParsing="false" text="Button" />

        <ImageView fx:id="imageView" fitHeight="181.0" fitWidth="313.0" />

        <Label fx:id="titleLabel" style="-fx-font-size: 14;" styleClass="subtitle" />
        <Label fx:id="descriptionLabel" style="-fx-font-size: 11;" styleClass="body-text" wrapText="true" />
        <Label fx:id="goalLabel" style="-fx-font-size: 11; -fx-text-fill: #5B87FF;" />
        <Label fx:id="statusLabel" style="-fx-font-size: 11; -fx-text-fill: #8BFFD0;" />
    </VBox>
</AnchorPane>
